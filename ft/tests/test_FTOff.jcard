{
	# Run simulation with 3 different outputs, including JLABSRO
	# no nthreads specified: runs on all available threads

	# verbosities
	"verbosity": 2,
	"grunv": 1,
	"gframestreamv": 2,
	"eventDistributionv": 2,

	"+gsystem": [
		{ "system": "./ft", "factory": "text", "variation": "FTOff" }
	],

	"+goutput": [
		{
			"format": "ROOT",
			"name": "events.root",
			"type": "event"
		},
		{
			"format": "JLABSRO",
			"name": "stream.dat",
			"type": "stream"
		},
		{
			"format": "TEXT",
			"name": "events.txt",
			"type": "event"
		}
	],

	"digitizationVariation": "rga_spring2018_mc",
	"n": 1000,
	"eventTimeSize": "2*us",
	"+gparticle": [
		{ "pname": "e-",  "multiplicity": 1, "p": 2100, "theta": 3, "delta_phi": 180.0, "delta_theta": 2.0},
		{ "pname": "pi0", "multiplicity": 1, "p": 2300, "theta": 2}
	]


}
